<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PrivacyPolicyActivity"
    style="@style/BACKGROUND">

    <!-- Header with Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="24dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/privacy_icon"
            android:layout_marginRight="8dp"/>

        <TextView
            style="@style/TEXT_COLOR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">


            <!-- Section 1: Introduction -->
            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="1. Introduction"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="Welcome to FishFoilo. This Privacy Policy outlines how we collect, use, and protect your information when you use our app."
                android:textSize="16sp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"
                android:layout_marginBottom="16dp"/>

            <!-- Section 2: Information Collection -->
            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="2. Information We Collect"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="We collect various types of information to provide better services, including data from sensors, user account details, and usage statistics."
                android:textSize="16sp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"
                android:layout_marginBottom="16dp"/>

            <!-- Section 3: How We Use Information -->
            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="3. How We Use Your Information"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="The information we collect is used to improve your experience, provide real-time updates, and ensure the optimal functioning of our app."
                android:textSize="16sp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"
                android:layout_marginBottom="16dp"/>

            <!-- Section 4: Information Sharing -->
            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="4. Information Sharing and Disclosure"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="We do not share your personal information with third parties except as necessary to comply with legal obligations, protect our rights, or provide the services you request."
                android:textSize="16sp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"
                android:layout_marginBottom="16dp"/>

            <!-- Section 5: Data Security -->
            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="5. Data Security"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="We take the security of your data seriously and implement appropriate technical and organizational measures to protect your information."
                android:textSize="16sp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"
                android:layout_marginBottom="16dp"/>

            <!-- Section 6: Your Rights -->
            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="6. Your Rights"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="You have the right to access, correct, or delete your personal data. You can also withdraw consent to data processing at any time."
                android:textSize="16sp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"
                android:layout_marginBottom="16dp"/>

            <!-- Section 7: Changes to This Policy -->
            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="7. Changes to This Privacy Policy"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="We may update this Privacy Policy from time to time. We will notify you of any changes by posting the new Privacy Policy on this page."
                android:textSize="16sp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"
                android:layout_marginBottom="16dp"/>

            <!-- Section 8: Contact Us -->
            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="8. Contact Us"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="If you have any questions about this Privacy Policy, please contact us at teamfishfolio@gmail.com."
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>