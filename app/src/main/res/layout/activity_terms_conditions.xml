<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TermsConditionsActivity"
    style="@style/BACKGROUND">

    <!-- Header with Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/terms_and_conditions_icon"
            android:layout_marginRight="8dp"/>

        <TextView
            style="@style/TEXT_COLOR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms and Conditions"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Section 1: Introduction -->
            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="1. Introduction"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="Welcome to FishFoilo. By using this application, you agree to comply with and be bound by the following terms and conditions. Please review them carefully."
                android:textSize="16sp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"
                android:layout_marginBottom="16dp"/>

            <!-- Section 2: User Account -->
            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="2. User Account"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="To access the full features of our app, you may need to create a user account. You are responsible for maintaining the confidentiality of your account credentials and for any activities that occur under your account."
                android:textSize="16sp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"
                android:layout_marginBottom="16dp"/>

            <!-- Section 3: Usage of Data -->
            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="3. Usage of Data"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="The app collects and uses data from various sensors to provide real-time monitoring and analysis. By using this app, you consent to the collection and use of this data in accordance with our Privacy Policy."
                android:textSize="16sp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"
                android:layout_marginBottom="16dp"/>

            <!-- Section 4: Intellectual Property -->
            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="4. Intellectual Property"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="All content included in this app, such as text, graphics, logos, and software, is the property of [App Name] or its content suppliers and is protected by intellectual property laws."
                android:textSize="16sp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"
                android:layout_marginBottom="16dp"/>

            <!-- Section 5: Limitation of Liability -->
            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="5. Limitation of Liability"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="To the maximum extent permitted by law, [App Name] shall not be liable for any indirect, incidental, or consequential damages arising out of or in connection with the use of this app."
                android:textSize="16sp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"
                android:layout_marginBottom="16dp"/>

            <!-- Section 6: Modifications to Terms -->
            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="6. Modifications to Terms"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="We reserve the right to modify these terms and conditions at any time. Any changes will be effective immediately upon posting on this app. Your continued use of the app following the posting of changes constitutes your acceptance of those changes."
                android:textSize="16sp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"
                android:layout_marginBottom="16dp"/>

            <!-- Section 7: Governing Law -->
            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="7. Governing Law"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="These terms and conditions are governed by and construed in accordance with the laws of [Country/State], and you irrevocably submit to the exclusive jurisdiction of the courts in that location."
                android:textSize="16sp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ddd"
                android:layout_marginBottom="16dp"/>

            <!-- Section 8: Contact Us -->
            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="8. Contact Us"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TEXT_COLOR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp"
                android:text="If you have any questions or concerns about these terms, please contact Us."
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>